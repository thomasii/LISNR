{
  "version": 3,
  "cmakeMinimumRequired": { "major": 3, "minor": 20 },
  "configurePresets": [
    {
      "name": "debug-all-linux",
      "description": "Debug build (shared + exe) on Linux",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/debug-all-linux",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_SHARED": "ON",
        "BUILD_EXE": "ON"
      }
    },
    {
      "name": "debug-all-windows",
      "description": "Debug build (shared + exe) on Windows",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/debug-all-windows",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_SHARED": "ON",
        "BUILD_EXE": "ON"
      }
    },
    {
      "name": "release-lib-linux",
      "description": "Release build (shared-only) on Linux",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/release-lib-linux",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_SHARED": "ON",
        "BUILD_EXE": "OFF"
      }
    },
    {
      "name": "release-lib-windows",
      "description": "Release build (shared-only) on Windows",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/release-lib-windows",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_SHARED": "ON",
        "BUILD_EXE": "OFF"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-debug-linux",
      "configurePreset": "debug-all-linux"
    },
    {
      "name": "build-debug-windows",
      "configurePreset": "debug-all-windows"
    },
    {
      "name": "build-release-linux",
      "configurePreset": "release-lib-linux"
    },
    {
      "name": "build-release-windows",
      "configurePreset": "release-lib-windows"
    }
  ]
}
